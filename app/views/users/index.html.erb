<div class="row">
  <div class="medium-12 columns">
    <blockquote><h2>Each time your closer to your best tandem mate!</h2></blockquote>

    <ul class="medium-block-grid-4 small-block-grid-2">
      <% @users.each do |user| %>
      <li class="">
        <a class="th radius" href="#">
          <img src="http://placehold.it/220x240/F9F9F9&text=<%= user.name %>">
        </a>
        <h6><%= user.name %></h6>
        <% user.languages.each do | language | %>
        <%= link_to language.language, tandems_path(user_id: user.id, language: language.language), method: :post, "class" => "label secondary" %>
        <% end %>
      </li>
      <% end %>
    </ul>
  </div>
</div>

