<div class="row">
  <div class="medium-12 columns">
    <h1>Listing users</h1>

    <ul class="medium-block-grid-4">
      <% @users.each do |user| %>
      <li>
        <h6><%= user.name %></h6>
        <% user.languages.each do | language | %>
        <%= link_to language.language, tandems_path(user_id: user.id, language: language.language), method: :post, "class" => "label secondary" %>
        <% end %>
      </li>
      <% end %>
    </ul>



    <%= link_to 'New User', new_user_path %>

  </div>
</div>

