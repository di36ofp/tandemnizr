<div class="row">
  <div class="medium-12 columns">
    <p id="notice"><%= notice %></p>

    <p>
      <strong>Name:</strong>
      <%= @user.name %>
    </p>

    <p>
      <strong>Email:</strong>
      <%= @user.email %>
    </p>

    <p>
      <strong>Nationality:</strong>
      <%= @user.nationality %>
    </p>

    <p>
      <strong>City:</strong>
      <%= @user.city %>
    </p>

    <p>
      <strong>Cp:</strong>
      <%= @user.cp %>
    </p>

    <p>
      <strong>Age:</strong>
      <%= @user.age %>
    </p>

    <p>
      <strong>Career:</strong>
      <%= @user.career %>
    </p>

    <p>
      <strong>Photo:</strong>
      <%= @user.photo %>
    </p>

    <p>
      <strong>Description:</strong>
      <%= @user.description %>
    </p>

    <ul>
      <% @user.languages.each do | language | %>
        <li><%= language.language  %></li>
      <% end %>
    </ul>

    <a href="#" class="button split">Options<span data-dropdown="drop"></span></a><br>
    <ul id="drop" class="f-dropdown" data-dropdown-content>
      <li><%= link_to 'Edit', edit_user_path(@user) %></li>
      <li><%= link_to 'List languages', user_languages_path(@user) %></li>
      <li><%= link_to 'Back', users_path %></li>
    </ul>


  </div>
</div>